# =====================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =====================================================

# Host de la base de datos
DB_HOST=localhost

# Puerto de PostgreSQL
DB_PORT=5432

# Usuario de la base de datos
DB_USERNAME=postgres

# Contraseña de la base de datos
DB_PASSWORD=admin

# Nombre de la base de datos
DB_DATABASE=mutuos_db

# SSL para conexión a base de datos
# En LOCAL: false
# En PRODUCCIÓN (Render/Supabase): true
DB_SSL=false

# =====================================================
# CONFIGURACIÓN JWT
# =====================================================

# Secreto para firmar tokens JWT (CAMBIA ESTO EN PRODUCCIÓN)
JWT_SECRET=secreto_super_seguro_cambiar_en_produccion

# Expiración del token (en segundos o formato como '7d', '24h')
JWT_EXPIRES_IN=7d

# =====================================================
# CONFIGURACIÓN DE LA APLICACIÓN
# =====================================================

# Entorno de ejecución (development, production, test)
NODE_ENV=development

# Puerto en el que correrá el servidor
PORT=3000

# URL del frontend (para CORS)
FRONTEND_URL=http://localhost:5173

# =====================================================
# CONFIGURACIÓN DE ARCHIVOS
# =====================================================

# Tamaño máximo de archivo en bytes (10MB)
MAX_FILE_SIZE=10485760

# Directorio temporal para archivos
UPLOAD_DIR=./uploads

# =====================================================
# CONFIGURACIÓN DE SEGURIDAD
# =====================================================

# Número de rounds para bcrypt (10 es recomendado)
BCRYPT_ROUNDS=10
